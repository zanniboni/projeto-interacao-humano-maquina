{{!-- Página para editar as postagens --}}
{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Editar produtos</h3>

<div class="card">
    <div class="card-body">
        <form action="/admin/produtos/edit" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="id" value="{{produtos._id}}">
            <input type="hidden" name="id_categoria" value="{{produtos.categoria}}">

            <label for="titulo">Nome: </label>
            <input type="text" name="titulo" class="form-control" value="{{produtos.nome}}" required>

            <label for="categoria">Categoria: </label>
            <select name="categoria" id="categoriaselecionada" class="form-select form-select mb-3" aria-label="">
                {{#each cateagorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria cadastrada.</option>
                {{/each}}
            </select>

            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" value="{{produtos.descricao}}" required>

            <label for="quantidade">Quantidade: </label>
            <input type="text" name="quantidade" class="form-control" value="{{produtos.quantidade}}" required>

            <label for="preco">Preço: </label>
            <input type="text" name="preco" class="form-control" value="{{produtos.preco}}" required>
            
            <label class="form-label" for="file">Selecionar foto</label>
            <input type="file" class="form-control" id="file" name="file" />

            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" value="{{produtos.slug}}" required>

            <button type="submit" class="btn btn-success mt-4 col-md-12">
                Editar produtos
            </button>
        </form>

    </div>
</div>